#!/bin/bash
#
# Upgrade server and remove unused packages on Ubuntu 18.04.
# Usage
#   This script must be run as root (ex.: sudo sh ./[script_name]) and prior to
#   any server customization.
# Style Guide
#   https://google.github.io/styleguide/shellguide.html

# Functions
source ./logger.sh
source ./utils.sh

function main() {
  utils::set_exit_trap

  #############################################################################

  logger::echo_title "Start of $0"

  logger::echo_info "This script: "
  logger::echo_info "1) Upgrades all installed server packages"
  logger::echo_info "2) Removes all packages that are no longer used"

  #############################################################################

  logger::echo_action "Updating server package index files..."
  apt update

  logger::echo_action "Upgrading all installed server packages to their latest version and apply available security patches..."
  apt upgrade -y

  logger::echo_action "Removing server packages that are no longer needed."
  apt autoremove -y

  #############################################################################

  logger::echo_title "End of $0"

  #############################################################################

  utils::unset_exit_trap
}

main "$@"
